<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/style.css">
    <title>chatMe</title>
</head>

<body class="bg-dark">
    <div class="text-center d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <% newMessages.forEach(function(message){ %>
        <form action="/delete" method="post">
            <div>
                <p class="text"><%= message.text %></p>
                <p class="message"><%= message.date %></p>
                <button type="submit" class="btn btn-danger" name="buttonDel" value="<%= message._id %>"
                    onChange="this.form.submit()">Delete</button>
        </form>
        <% }) %>

        <form action="/" method="post">
            <input type="text" class="form-control" name="newMessage" placeholder="Enter Message" autocomplete="off"
                autofocus>
            <button type="submit" name="button" class="btn btn-primary">Post</button>
        </form>
        <h1>Upload Image</h1>
        <form action="/uploadphoto" enctype="multipart/form-data" method="POST">
            <input type="file" name="myImage" accept="image/*">
            <input type="submit" value="Upload Photo">
        </form>
    </div>
</body>

</html>
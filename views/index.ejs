<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>chatMe</title>
</head>
<body>

    <div>
        <% newMessages.forEach(function(message){ %>
            <form action="/delete" method="post">
            <div>
                <p><%= message.text %></p>
                <button type="submit" name="buttonDel" value="<%= message._id %>" onChange="this.form.submit()">Delete</button>
            </div>
        </form>
         <% }) %>

    <form action="/" method="post">
        <input type="text" name="newMessage" placeholder="Enter Message" autocomplete="off" autofocus>
        <button type="submit" name="button">Post</button>
    </form>
</body>
</html>